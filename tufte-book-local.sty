% Title block
\usepackage[absolute]{textpos}
\setlength{\TPHorizModule}{1in} % sets our horizontal unit of measuring
\setlength{\TPVertModule}{1in} % sets our vertical unit of measuring
\textblockorigin{0mm}{0mm} % and we start measuring in the top left corner

\renewcommand{\maketitle}{%
  \fancyhf{} % clear header and footer fields
  \global\@topnum\z@% prevent floats from being placed at the top of the page

  \begingroup
    \let\@@title\@empty
    \let\@@author\@empty
    \let\@@date\@empty
    \gdef\@@title{\Large\allcaps{\@title}\par}%
    \gdef\@@author{\Large\allcaps{\@author}\par}%
    \gdef\@@date{\Large\@date\par}%
    \newgeometry{left=1in,bottom=1in, right=1in, top=3in}

    % Title 2in from top
    \begin{textblock}{6.5}(1,2)\centering
    \@@title
    \end{textblock}
    
    % By author should be 3.5in from top
    \begin{textblock}{6.5}(1,3.5)\centering
	    \Large{\allcaps{BY}} \\
    \vspace*{\baselineskip} % blank line separating by and name
    \@@author
    \end{textblock}
   
    % dissertation block shouldbe 5.5 inches from top of page
    \begin{textblock}{6.5}(1,5.5)\centering
    DISSERTATION \\
    \vspace*{\baselineskip} % blank line separating by and name
    Submitted in partial fulfillment of the requirements \\
    for the degree of Doctor of Philosophy in Library and Information Science \\
    in the Graduate College of the \\
    University of Illinois at Urbana-Champaign, 2015 \\

    \end{textblock}

    % Location should be 7.5 inches from top
    \begin{textblock}{6.5}(1,7.5)\centering
    Urbana, Illinois
    \end{textblock}

    % Committe list should be 8.5 inches from the top
    \begin{textblock}{6.5}(1,8.5)
    \setlength{\parindent}{36pt}%
    \setlength{\parskip}{4pt}%
    Doctoral Committee: \\
    \-\hspace{0.5in} Professor Michael Twidale, Advisor \\
    \-\hspace{0.5in} Associate Professor Miles Efron \\
    \-\hspace{0.5in} Professor J. Stephen Downie \\
    \-\hspace{0.5in} Jaime Teevan, Microsoft Research \\
    \end{textblock}

    % A page of all floats causes trouble, so add a phantom box
    \phantom{4}
  \endgroup
  \restoregeometry
}



